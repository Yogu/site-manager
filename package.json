{
	"name": "site-manager",
	"version": "0.0.1",
	"description": "Upgrade, backup and manage multiple instances of the same website",
	"main": "index.js",
	"author": "Jan Melcher <info@yogularm.de>",
	"license": "GPLv2",
	"dependencies": {
		"socket.io": "0.9.x",
		"express": "4.0.x",
		"es6-promise": "*",
		"js-yaml": "3.0.x",
		"bower": "1.3.x",
		"express-promise": "0.1.x",
		"mkdirp": "0.3.x",
		"rimraf": "2.2.x",
		"ncp": "0.5.x",
		"walk": "2.3.x"
	},
	"devDependencies": {
		"coveralls": "2.10.x",
		"jasmine-node": "1.14.x",
		"karma": "~0.10",
		"protractor": "0.20.x",
		"phantomjs": "1.9.x",
		"istanbul": "0.2.x"
	},
	
	"scripts": {
		"postinstall": "bower install",
		
		"server-unit-test-with-coverage": "istanbul cover -x 'test/**' jasmine-node -- --captureExceptions test/server-unit",
		"server-unit-test": "jasmine-node --captureExceptions test/server-unit",
		"client-unit-test": "karma start test/karma-conf.js",
		"end-to-end-test": "webdriver-manager update && protractor test/protractor-conf.js --browser=${BROWSER-chrome}",
		"test": "npm run server-unit-test-with-coverage && npm run client-unit-test && npm run end-to-end-test",
		"coveralls": "cat ./coverage/lcov.info | coveralls"
	}
}
